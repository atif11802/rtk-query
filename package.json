{
	"name": "ecommerce-boilerplate",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"commit": "git add -A && cz"
	},
	"dependencies": {
		"next": "14.1.0",
		"react": "^18",
		"react-dom": "^18"
	},
	"devDependencies": {
		"@ryansonshine/cz-conventional-changelog": "^3.3.4",
		"autoprefixer": "^10.0.1",
		"commitizen": "^4.3.0",
		"eslint": "^8.56.0",
		"eslint-config-next": "14.1.0",
		"eslint-plugin-react": "^7.33.2",
		"husky": "^9.0.6",
		"lint-staged": "^15.2.0",
		"postcss": "^8",
		"tailwindcss": "^3.3.0"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/@ryansonshine/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --fix"
	}
}
